<html>
	<head>
		<title>$i18n.getText("irc.admin.label")</title>
		<meta name="decorator" content="atl.admin" />
		<meta name="application-base-url" content="$applicationProperties.getBaseUrl()">
		$webResourceManager.requireResource("biz.wiz.jira.plugins.irc:admin-resources")
	</head>
	<body>
		<h1>$i18n.getText("irc.admin.label")</h1>
		<form id="admin" class="aui">
			<div>
				<label for="active">$i18n.getText("irc.admin.active.label")</label>
				<input type="checkbox" id="active" name="active">
			</div>
			<div>
				<label for="ircServerHost">$i18n.getText("irc.admin.ircServerHost.label")</label>
				<input type="text" id="ircServerHost" name="ircServerHost" class="text">
			</div>
			<div>
				<label for="ircServerPort">$i18n.getText("irc.admin.ircServerPort.label")</label>
				<input type="text" id="ircServerPort" name="ircServerPort" class="text">
			</div>
			<div>
				<label for="ircServerSSL">$i18n.getText("irc.admin.ircServerSSL.label")</label>
				<input type="checkbox" id="ircServerSSL" name="ircServerSSL">
			</div>
			<div>
				<input id="submit" type="submit" value="$i18n.getText("irc.admin.save.label")" class="button">
			</div>
		</form>
	</body>
</html>
